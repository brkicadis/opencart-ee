<div class="form-group required">
    <label class="col-sm-2 control-label" for="input-status">{{ config_challenge_indicator }}</label>
    <div class="col-sm-10">
        <select name="{{ prefix ~ 'challenge_indicator' }}" id="input-challenge-indicator" class="form-control">
                <option value="no_preference" {% if not challenge_indicator == 'no_challenge' and not challenge_indicator == 'challenge_threed' %}selected="selected"{% endif %}>{{ config_challenge_no_preference }}</option>
                <option value="no_challenge" {% if challenge_indicator == 'no_challenge' %}selected="selected"{% endif %}>{{ config_challenge_no_challenge }}</option>
                <option value="challenge_threed" {% if challenge_indicator == 'challenge_threed' %}selected="selected"{% endif %}>{{ config_challenge_challenge_threed }}</option>
        </select>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 description">
            <i>{{ config_challenge_indicator_desc }}</i>
        </div>
    </div>
</div>
<hr>