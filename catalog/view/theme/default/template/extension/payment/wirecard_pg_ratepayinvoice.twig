<fieldset id="payment">
    <legend>{{ ratepayinvoice_legend }}</legend>
    <div id="error-box-ratepayinvoice" class="alert alert-warning alert-dismissible">
        <i class="fa fa-exclamation-circle"></i><span id="error-text-ratepayinvoice">&nbsp;{{ birthdate_error }}</span>
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
    </div>
    <div class="form-group required">
        <div class="col-sm-2">
            <label class="control-label col-form-label text-right" for="ratepayinvoice-birthdate">{{ birthdate_input }}:</label>
        </div>
        <div class="col-sm-10">
            <input id="ratepayinvoice-birthdate" class="form-control" type="date" name="ratepayinvoice-birthdate" onchange="validate()" autocomplete="false">
        </div>
    </div>
    <div class="form-group required pt-10">
        <div class="col-sm-2 text-right">
            <input type="checkbox" value="1" class="custom-control-input" id="terms_wirecard_pg_ratepay" onchange="validate()">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-form-label" for="terms_wirecard_pg_ratepay">
                {{ text_terms }}
            </label>
        </div>
    </div>
    {% if ratepay_device_ident %}
        <input id="ratepayinvoice-device" type="hidden" name="ratepayinvoice-device" value="{{ ratepay_device_ident }}">
        <script language="JavaScript">
            var di= {t: "{{ ratepay_device_ident }}", v: "WDWL", l: "Checkout"};
        </script>
        <script type="text/javascript" src="//d.ratepay.com/WDWL/di.js">
        </script>
        <noscript>
            <link rel="stylesheet" type="text/css" href="//d.ratepay.com/di.css?t={{ ratepay_device_ident }}&v=WDWL&l=Checkout">
        </noscript>
        <object type="application/x-shockwave-flash" data="//d.ratepay.com/WDWL/c.swf" width="0" height="0">
            <param name="movie" value="//d.ratepay.com/WDWL/c.swf" />
            <param name="flashvars" value="t={{ ratepay_device_ident }}&v=WDWL" />
            <param name="AllowScriptAccess" value="always" />
        </object>
    {% endif %}
</fieldset>
<script src="catalog/view/javascript/wirecard_pg_ratepayinvoice.js" type="text/javascript"></script>